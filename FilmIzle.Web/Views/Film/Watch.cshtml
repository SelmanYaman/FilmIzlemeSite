@model FilmWatchDto
@{
    Layout = null;
    string categories = (string)TempData["Categories"];
    string language = (string)TempData["Language"];
}



@{
    var comments = (List<CommentListDto>)ViewBag.Comments;

    void GetComments(List<CommentListDto> comments)
    {

        if (comments.Count > 0)
        {
            foreach (var comment in comments)
            {
                <div class="media my-3 p-2 border border-white">
                    <img class="d-flex mr-3 rounded-circle" src="/img/commentProfile2.jpg" style="height:50px;width:50px;" alt="">
                    <div class="media-body">
                        <h5 class="mt-0">İsim : @comment.AuthorName</h5>
                        Yorum : @comment.Description
                        <button type="button" class="btn btn-sm btn-light float-right"
                                onclick="showCommentForm(@comment.Id,@Model.Id)">
                            Cevapla
                        </button>
                        <div id="commentBox@(comment.Id)" style="color:black">

                        </div>
                        @{
                            GetComments(comment.SubComments);
                        }
                    </div>
                </div>
            }
        }
    }
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
