@model AppUserSigninDto
@{
    Layout = null;
}

<!doctype html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.82.0">
    <title>Signin Template · Bootstrap v5.0</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/5.0/examples/sign-in/">



    <!-- Bootstrap core CSS -->

    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />


    <!-- Custom styles for this template -->

    <link href="~/css/signin.css" rel="stylesheet" />
</head>
<body class="text-center">

    <main class="form-signin">
        <form method="post" asp-action="Signin">
            <img class="mb-4" src="~/img/password.png" alt="" width="100" height="100">
            <h1 class="h3 mb-3 fw-normal">Lütfen Giriş Yapın</h1>

            <div class="form-floating">
                <input asp-for="UserName" class="form-control">
                <label asp-for="UserName">Kullanıcı Adı</label>
            </div>
            <div class="form-floating">
                <input asp-for="Password" type="password" class="form-control">
                <label asp-for="Password">Şifre</label>
            </div>
            <div asp-validation-summary="ModelOnly"></div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Giriş Yap</button>
            <button asp-controller="Film" asp-action="Index" class="w-100 btn btn-lg btn-secondary mt-2" type="submit">Siteye Git</button>
        </form>
    </main>

</body>
</html>
