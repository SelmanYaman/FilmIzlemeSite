@model List<FilmListAllDto>
@{
    ViewData["Title"] = "Search";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int page = (int)ViewBag.SearchPage;
    int pagaCount = (int)ViewBag.SearchPageCount;
    string s = (string)ViewBag.SearchFilm;
}


<div class="row">
    <div class="col-md-2">
        <a asp-action="AddFilm" class="btn btn-outline-dark btn-sm my-2"><i class="far fa-plus-square mr-2"></i>Film Ekle</a>
    </div>
    <div class="col-md-3"></div>
    <div class="col-md-4">
        <form method="get" asp-action="Search" class="form-inline">
            <input class="form-control my-2 mr-3" name="q" placeholder="Film Ara">
            <button class="btn btn-outline-success my-2" asp-action="Search">Ara<i class="fas fa-search ml-1"></i></button>
        </form>
    </div>
    <div class="col-md-3">
        @if (!string.IsNullOrEmpty(s))
        {
            <h5 my-2>Aranan Kelime : @s</h5>
            <a asp-action="Index" class="float-right">Filtreyi Kaldır</a>
        }
    </div>
</div>


@if (Model.Count != 0)
{
    <table class="table table-hover table-bordered table-sm mt-2">
        <tr>
            <th>Film İsmi</th>
            <th>Yönetmen</th>
            <th>Yayın Tarihi</th>
            <th>IMDB Puan</th>
            <th>Kategori Ata</th>
            <th>İşlem</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Director</td>
                <td>@item.ReleaseDate.ToShortDateString()</td>
                <td>@item.IMDBPoint</td>
                <td>
                    <a asp-action="AssignCategory" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm"><i class="fas fa-film mr-2"></i>Kategori Ata</a>
                </td>
                <td>
                    <a asp-action="UpdateFilm" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="far fa-edit mr-2"></i>Düzenle</a>
                    <a href="" data-toggle="modal" data-target="#deleteScreen" data-selman="@item.Id" class="btn btn-danger btn-sm"><i class="far fa-times-circle mr-2"></i>Sil</a>
                </td>
            </tr>
        }
    </table>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-end">
            @if (pagaCount == 1)
            {
                <li class="page-item disabled">
                    <a class="page-link" asp-action="Search" asp-route-q="@(s)" asp-route-page="@(page -1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                <li class="page-item active"><a class="page-link" asp-action="Search" asp-route-q="@(s)" asp-route-page="@(page)">@(page)</a></li>
                <li class="page-item disabled">
                    <a class="page-link" asp-action="Search" asp-route-q="@(s)" asp-route-page="@(page + 1)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            }
            else if (pagaCount == 2)
            {
                if (page == 1)
                {
                    <li class="page-item disabled">
                        <a class="page-link" asp-action="Search" asp-route-q="@(s)" asp-route-page="@(page -1)" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li class="page-item active"><a class="page-link" asp-action="Search" asp-route-q="@(s)" asp-route-page="@(page)">@(page)</a></li>
                    <li class="page-item"><a class="page-link" asp-action="Search" asp-route-q="@(s)" asp-route-page="@(page+1)">@(page+1)</a></li>
                    <li class="page-item disabled">
                        <a class="page-link" asp-action="Search" asp-route-q="@(s)" asp-route-page="@(page + 1)" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <a class="page-link" asp-action="Search" asp-route-q="@(s)" asp-route-page="@(page -1)" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" asp-action="Search" asp-route-q="@(s)" asp-route-page="@(page -1)">@(page-1)</a></li>
                    <li class="page-item active"><a class="page-link" asp-action="Search" asp-route-q="@(s)" asp-route-page="@(page)">@(page)</a></li>
                    <li class="page-item disabled">
                        <a class="page-link" asp-action="Search" asp-route-q="@(s)" asp-route-page="@(page + 1)" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                }
            }
            else
            {
                if (page == 1)
                {
                    <li class="page-item disabled">
                        <a class="page-link" asp-action="Search" asp-route-q="@(s)" asp-route-page="@(page -1)" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li class="page-item active"><a class="page-link" asp-route-q="@(s)" asp-action="Search" asp-route-page="@(page)">@(page)</a></li>
                    <li class="page-item"><a class="page-link" asp-route-q="@(s)" asp-action="Search" asp-route-page="@(page + 1)">@(page + 1)</a></li>
                    <li class="page-item"><a class="page-link" asp-route-q="@(s)" asp-action="Search" asp-route-page="@(page + 2)">@(page + 2)</a></li>
                    <li class="page-item">
                        <a class="page-link" asp-action="Search" asp-route-q="@(s)" asp-route-page="@(page + 1)" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                }
                else if (page == pagaCount)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Search" asp-route-q="@(s)" asp-route-page="@(page -1)" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" asp-route-q="@(s)" asp-action="Search" asp-route-page="@(page - 1)">@(page -1)</a></li>
                    <li class="page-item active"><a class="page-link" asp-route-q="@(s)" asp-action="Search" asp-route-page="@(page)">@(page)</a></li>
                    <li class="page-item disabled">
                        <a class="page-link" asp-action="Search" asp-route-q="@(s)" asp-route-page="@(page + 1)" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                }
                else
                {
                    if ((pagaCount - 1) == page)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Search" asp-route-q="@(s)" asp-route-page="@(page -1)" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                        <li class="page-item"><a class="page-link" asp-route-q="@(s)" asp-action="Search" asp-route-page="@(page -1)">@(page -1)</a></li>
                        <li class="page-item active"><a class="page-link" asp-route-q="@(s)" asp-action="Search" asp-route-page="@(page)">@(page)</a></li>
                        <li class="page-item"><a class="page-link" asp-route-q="@(s)" asp-action="Search" asp-route-page="@(page + 1)">@(page + 1)</a></li>
                        <li class="page-item">
                            <a class="page-link" asp-action="Search" asp-route-q="@(s)" asp-route-page="@(page + 1)" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Search" asp-route-q="@(s)" asp-route-page="@(page -1)" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                        <li class="page-item"><a class="page-link" asp-route-q="@(s)" asp-action="Search" asp-route-page="@(page -1)">@(page -1)</a></li>
                        <li class="page-item active"><a class="page-link" asp-route-q="@(s)" asp-action="Search" asp-route-page="@(page)">@(page)</a></li>
                        <li class="page-item"><a class="page-link" asp-route-q="@(s)" asp-action="Search" asp-route-page="@(page + 1)">@(page + 1)</a></li>
                        <li class="page-item">
                            <a class="page-link" asp-action="Search" asp-route-q="@(s)" asp-route-page="@(page + 1)" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                    }
                }
            }
        </ul>
    </nav>
}
else
{
    <div class="p-3 text-center mt-3 lead">
        <p class="lead">
            Herhangi bir film bulunamadı.
        </p>
    </div>
}



<div class="modal fade" id="deleteScreen" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Uyarı</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Silmek istediğinizden emin misiniz?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                <button id="btnDelete" type="button" class="btn btn-primary">Evet Sil</button>
            </div>
        </div>
    </div>
</div>

@section JavaScript{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#deleteScreen').on("show.bs.modal", function (event) {
                let tetikleyenElement = $(event.relatedTarget);
                let id = tetikleyenElement.data("selman");
                $('#btnDelete').click(function () {
                    $.ajax({
                        type: "Get",
                        url: "./Film/RemoveFilm",
                        data: { id: id },
                        dataType: "json",
                        contentType: "application/json;charset=utf-8",
                        success: function () {
                            window.location.reload();
                        },
                        error: function (error) {
                            alert(error.statusText);
                        }
                    });
                });
            });
        });
    </script>
}