
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<h5 class="m-3">Toplam Film Sayısı : <strong>@ViewBag.FilmCount</strong></h5>


<div class="row mt-3">
    <div class="col-md-6">
        <div class="card text-white bg-primary text-center mb-3 my-2">
            <div class="card-body">
                <h4 class="card-title">Slider Filmlerini Belirle</h4>
                <a asp-action="Slider" asp-controller="Film" class="btn btn-light btn-sm"><i class="fas fa-chevron-circle-right mr-1"></i>İncele</a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card text-white bg-primary text-center mb-3 my-2">
            <div class="card-body">
                <h4 class="card-title">Kategorilere Göre Film Sayısı</h4>
                <a asp-action="NumberOfFilmsByCategory" asp-controller="Category" class="btn btn-light btn-sm mt-2"><i class="fas fa-chevron-circle-right mr-1"></i>İncele</a>
            </div>
        </div>
    </div>
</div>