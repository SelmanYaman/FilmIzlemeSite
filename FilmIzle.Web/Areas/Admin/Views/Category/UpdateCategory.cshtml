@model CategoryUpdateDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="UpdateCategory" method="post" class="w-75 mx-auto p-3">
    <input type="hidden" asp-for="Id" />
    <div class="alert alert-danger" role="alert" asp-validation-summary="ModelOnly"></div>
    <span asp-validation-for="Name" class="text-danger"></span>
    <div class="form-group">
        <label>Yeni Kategori İsmi</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <a asp-action="Index" class="btn btn-warning btn-sm"><i class="far fa-times-circle mr-1"></i>Vazgeç</a>
    <button type="submit" class="btn btn-info btn-sm"><i class="far fa-save mr-2"></i>Kaydet</button>
</form>